<h1>Editar Post</h1>

<form method="POST" action="/posts/edit/{{post._id}}">
    <div class="form-group">
        <label for="title">Titulo:</label><input class="form-control" name="title" type="text" value="{{post.title}}"/>
    </div>
    <div class="form-group">
        <label for="author">Autor:</label><input class="form-control" name="author" type="text" value="{{post.author}}"/>
    </div>
    <div class="form-group">
        <label for="body">Texto:</label><textarea class="form-control" name="body">{{post.body}}</textarea>
    </div>
    <input class="btn btn-primary" type="submit"/>
</form>